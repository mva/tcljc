(ns tcljc.clone-test
  (:require [tcljc.bootstrap :refer [asm-expr]]
            [tinyclj.alpha.ptest :refer :all]))

(deftest clone-ints-test
  (is (= '[["LOCAL 0: int[] x"]
           (ALOAD_0)
           (DUP)
           (ARRAYLENGTH)
           (INVOKESTATIC Arrays "copyOf" "([II)[I")
           (ARETURN)]
         (asm-expr [^ints x] (aclone x)))))

(deftest clone-strings-test
  (is (= '[["LOCAL 0: String[] x"]
           (ALOAD_0)
           (DUP)
           (ARRAYLENGTH)
           (INVOKESTATIC Arrays "copyOf" "([Ljava/lang/Object;I)[Ljava/lang/Object;")
           (CHECKCAST "String[]")
           (ARETURN)]
         (asm-expr [^"[Ljava.lang.String;" x] (aclone x)))))

(deftest clone-multi-test
  (is (= '[["LOCAL 0: int[][] x"]
           (ALOAD_0)
           (DUP)
           (ARRAYLENGTH)
           (INVOKESTATIC Arrays "copyOf" "([Ljava/lang/Object;I)[Ljava/lang/Object;")
           (CHECKCAST "int[][]")
           (ARETURN)]
         (asm-expr [^"[[I" x] (aclone x)))))

(deftest clone-then-toString-test
  (is (= '[["LOCAL 0: int[] x"]
           (ALOAD_0)
           (DUP)
           (ARRAYLENGTH)
           (INVOKESTATIC Arrays "copyOf" "([II)[I")
           (INVOKEVIRTUAL Object "toString" "()Ljava/lang/String;")
           (ARETURN)]
         (asm-expr [^ints x] (.toString (aclone x))))))

